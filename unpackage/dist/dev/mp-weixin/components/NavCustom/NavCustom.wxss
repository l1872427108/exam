.nav-custom {
  display: block;
  position: relative;
}
.nav-custom-bar {
  min-height: 0px;
  padding-right: 220rpx;
  box-shadow: 0rpx 0rpx 0rpx;
  z-index: 9999;
}
.nav-custom-bar .nav-custom-bar__left {
  line-height: 60rpx;
  height: 60rpx;
  font-size: 32rpx;
  margin-left: 20rpx;
}
.nav-custom-bar--bg {
  color: #ffffff;
  /* background-size: cover;
	background-position: center;
	background-repeat: no-repeat; */
}
.nav-custom-bar__content {
  width: calc(100% - 440rpx);
  position: absolute;
  text-align: center;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  margin: auto;
  height: 60rpx;
  font-size: 32rpx;
  line-height: 60rpx;
  cursor: none;
  pointer-events: none;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.nav-custom-bar__content image {
  height: 60rpx;
  width: 240rpx;
}
.bg-gradual-blue {
  background-image: linear-gradient(45deg, #0081ff, #1cbbb4);
  color: #ffffff;
}

