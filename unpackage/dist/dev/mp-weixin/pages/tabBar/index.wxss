.my-info-bg {
  position: relative;
  background: #FFFFFF;
  background-size: 100% 100%;
  height: 550rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  color: #FFFFFF;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.1);
}
.my-info-bg__nologin {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.my-info-bg__nologin-text {
  margin-top: 28rpx;
  color: #333;
  font-size: 36rpx;
  font-weight: 700;
}
.my-info-bg__img {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}
.my-info-student {
  /* padding: 30upx; */
  display: flex;
  text-align: center;
  color: #8799a3;
  background-color: #FFFFFF;
  position: relative;
  box-shadow: 0 10rpx 10rpx rgba(0, 0, 0, 0.1);
}
.my-info-student__item {
  display: flex;
  flex-direction: column;
  flex: 1;
}
.my-info-tool {
  margin: 30rpx 30rpx 20rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0rpx 0rpx 90rpx 0rpx rgba(0, 0, 0, 0.1);
  color: #333333;
  overflow: hidden;
}
.my-info-tool-item {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 100rpx;
  background-color: #FFFFFF;
}
.my-info-tool-item__btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  font-size: 28rpx;
  height: 64rpx;
  line-height: 1;
  text-align: center;
  padding: 0;
}
.my-info-tool-item__img {
  width: 1.6em;
  height: 1.6em;
}
.my-info-tool .my-info-tool-item:after {
  position: absolute;
  top: 0;
  left: 0;
  box-sizing: border-box;
  width: 200%;
  height: 200%;
  border-bottom: 1rpx solid #F1F1F1;
  border-radius: inherit;
  content: " ";
  -webkit-transform: scale(0.5);
          transform: scale(0.5);
  -webkit-transform-origin: 0 0;
          transform-origin: 0 0;
  pointer-events: none;
}
.solid-right {
  border-right: 1rpx solid rgba(0, 0, 0, 0.1);
}
