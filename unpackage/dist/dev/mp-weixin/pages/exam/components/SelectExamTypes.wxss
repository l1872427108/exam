.wrong-list {
  padding: 30rpx 60rpx;
}
.wrong-list .exam-title {
  padding: 30rpx 25rpx 25rpx 25rpx;
  font-size: 30rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
  line-height: 40rpx;
}
.wrong-list .wrong-list-item {
  width: 630rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0rpx 0rpx 10rpx 0rpx rgba(117, 117, 117, 0.28);
  margin-bottom: 30rpx;
}
.wrong-list .wrong-list-item .title-line {
  width: 630rpx;
  height: 2rpx;
  background: rgba(216, 216, 216, 0.76);
}
.wrong-list .wrong-list-item .answer {
  padding: 30rpx;
}
.wrong-list .wrong-list-item .answer text {
  width: 254rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC, PingFangSC-Light;
  font-weight: 300;
  text-align: center;
  color: #333333;
  line-height: 40rpx;
}
.wrong-list .wrong-list-item .ideas {
  padding: 35rpx;
  text-align: center;
}
.wrong-list .wrong-list-item .ideas text {
  font-size: 32rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #1598fc;
}
.wrong-list .wrong-list-item .select-option {
  padding: 30rpx 30rpx 0 30rpx;
}
.wrong-list .wrong-list-item .select-option .error-option {
  background: #f66565 !important;
}
.wrong-list .wrong-list-item .select-option .error-option text {
  color: #ffffff !important;
}
.wrong-list .wrong-list-item .select-option .select-content {
  background: #eeeeee;
  border-radius: 4rpx;
  padding: 20rpx 30rpx;
}
.wrong-list .wrong-list-item .select-option .select-content text {
  font-size: 30rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #888888;
  line-height: 50rpx;
}
.wrong-list .wrong-list-item .select-option .textarea {
  min-height: 400rpx;
}
.option-error {
  background: #f66565 !important;
}
.option-error text {
  color: #ffffff !important;
}
.option-action {
  background: #67C23A !important;
}
.option-action text {
  color: #ffffff !important;
}
